{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "repository": "github.com:joshbatley/edgmont-ui",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.6",
    "lerna": "^3.19.10"
  },
  "scripts": {
    "version": "lerna version --conventional-commits --create-release github",
    "publish": "lerna publish from-git",
    "build": "lerna run build",
    "build-docs:ci": "yarn clean-docs && yarn build-docs && yarn move-docs",
    "build-docs": "lerna run build-docs:ci",
    "move-docs": "./scripts/move-docs.sh",
    "clean-docs": "rm -rf ./docs/*",
    "lint": "eslint . --ignore-path .eslintignore",
    "typecheck": "lerna run typecheck",
    "test:ci": "lerna run test:ci"
  }
}
