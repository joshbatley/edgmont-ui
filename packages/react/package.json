{
  "name": "@edgmont-ui/react",
  "version": "0.1.10",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "homepage": "https://ui.edgmont.dev/",
  "bugs": {
    "url": "https://github.com/joshbatley/edgmont-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshbatley/edgmont-ui"
  },
  "contributors": [
    "joshbatley"
  ],
  "files": [
    "dist/**/*",
    "dist/**/*.css",
    "preset.js",
    "package.json"
  ],
  "scripts": {
    "start": "yarn storybook",
    "copy-preset": "cp preset.js public/preset.js",
    "storybook": "yarn copy-preset && start-storybook -p 6006 --no-manager-cache",
    "clean-dist": "rm -rf dist && mkdir dist",
    "rollup": "rollup -c rollup.config.js",
    "build": "yarn clean-dist && yarn rollup && yarn build-tailwind",
    "build:ci": "yarn build",
    "test": "jest --watch",
    "test:ci": "jest",
    "typecheck": "tsc -p tsconfig.build.json",
    "clean-docs": "rm -rf docs && mkdir docs",
    "create-cname": "echo ui.edgmont.dev > ./docs/CNAME",
    "create-ignore": "echo '*\n!.gitkeep' > ./docs/.gitignore",
    "create-keep": "touch ./docs/.gitkeep",
    "create-doc-files": "yarn create-ignore && yarn create-cname && yarn create-keep",
    "build-storybook": "build-storybook -o ./docs",
    "build-docs": "yarn clean-docs && yarn build-storybook && yarn create-doc-files",
    "build-tailwind": "tailwind  -i ./src/index.css -o ./dist/edgmont.css --postcss ./postcss.config.js --minify",
    "build-docs:ci": "yarn clean-docs && yarn build-storybook && yarn create-cname && yarn copy-preset"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@heroicons/react": "^1.0.5",
    "@popperjs/core": "^2.11.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.5.9",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.3.0",
    "@types/jest": "^28.1.6",
    "@types/react": "^18.0.15",
    "@types/react-datepicker": "^4.3.4",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-macros": "^3.1.0",
    "clsx": "^1.1.1",
    "date-fns": "^2.28.0",
    "downshift": "^6.1.7",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "postcss": "^8.4.14",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^7.0.1",
    "prism-react-renderer": "^1.3.1",
    "react": "^18.2.0",
    "react-datepicker": "^4.6.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.2",
    "react-focus-lock": "^2.8.1",
    "react-popper": "^2.2.5",
    "react-simple-code-editor": "^0.11.0",
    "react-spring": "^9.4.3",
    "react-use": "^17.3.2",
    "rollup": "^2.60.1",
    "rollup-plugin-import-css": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.32.1",
    "tailwindcss": "^3.0.22",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.22"
  },
  "publishConfig": {
    "access": "public"
  }
}
